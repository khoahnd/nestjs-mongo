{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",       
    "paths": {
        "~/*": [
            "src/*"
        ],
        "@base/*": ["src/base/*"],
        "@api/*": ["src/api/*"],
        "@user/*": ["src/user/*"],
        "@entities/*": ["src/entities/*"],
        "*": [
            "./node_modules/*"
        ]
    },    
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
